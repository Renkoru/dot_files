/* Couleurs Tango */
URxvt.foreground: #EEEEEC
! URxvt.foreground: #C8C8C8
URxvt.background: #323232
URxvt.color0:     #2E3436
URxvt.color1:     #CC0000
URxvt.color2:     #4E9A06
URxvt.color3:     #C4A000
URxvt.color4:     #3465A4
URxvt.color5:     #75507B
URxvt.color6:     #06989A
URxvt.color7:     #D3D7CF
URxvt.color8:     #555753
URxvt.color9:     #EF2929
URxvt.color10:    #8AE234
URxvt.color11:    #FCE94F
URxvt.color12:    #729FCF
URxvt.color13:    #AD7FA8
URxvt.color14:    #34E2E2
URxvt.color15:    #EEEEEC

URxvt*foreground:White
URxvt*background:Black

urxvt*cursorUnderline: 1 ! cursor position
urxvt*letterspace: -5    ! space between letters
urxvt*cursorBlink: true
urxvt*scrollBar: false
urxvt*depth: 32
urxvt*internalBorder: 5

URxvt.transparent: true
URxvt.shading:     10
URxvt.fading:      40
!urxvt*fadeColor: #000000 ! цвет тени

!Общие настройки xft
Xft.antialias: 1
Xft.autohint: 0
Xft.dpi: 96
Xft.hinting: 1
Xft.hintstyle: hintfull
Xft.lcdfilter: lcddefault
Xft.rgba: rgb

!используемые расширения
URxvt.perl-ext-common: default,selection-to-clipboard,matcher,tabbed

URxvt*font: xft:Terminus:pixelsize=14:antialias=true:hinting=true
URxvt*boldFont: xft:Terminus:bold:pixelsize=14:antialias=true:hinting=true

URxvt*saveLines: 12000
URxvt*color4: RoyalBlue
URxvt*color12: RoyalBlue

URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.clipboard.autocopy: true
URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste

Emacs.font: Terminus:size=11:antialise:true
Emacs.FontBackend: xft

