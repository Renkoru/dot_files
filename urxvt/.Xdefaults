! Urxvt -------------
! for clipboard working - install xsel on ubuntu

! st.font: mono:pixelsize=8:antialias=true:autohint=true;
st.font: Inconsolata:style=Regular:pixelsize=15:antialias=true:hinting=true
! st.boldFont: Liberation Mono:style=Regular-8;

/* Couleurs Tango */
URxvt.foreground: #EEEEEC
! URxvt.foreground: #C8C8C8
! URxvt.background: #323232
URxvt.color0:     #2E3436
URxvt.color1:     #CC0000
URxvt.color2:     #4E9A06
URxvt.color3:     #C4A000
URxvt.color4:     #3465A4
URxvt.color5:     #75507B
URxvt.color6:     #06989A
URxvt.color7:     #D3D7CF
URxvt.color8:     #555753
URxvt.color9:     #EF2929
URxvt.color10:    #8AE234
URxvt.color11:    #FCE94F
URxvt.color12:    #729FCF
URxvt.color13:    #AD7FA8
URxvt.color14:    #34E2E2
URxvt.color15:    #EEEEEC

URxvt*foreground:White
! URxvt*background:Black
URxvt*background: rgba:0000/0000/0000/cccc

urxvt*cursorUnderline: 1 ! cursor position
urxvt*letterspace: -5    ! space between letters
urxvt*cursorBlink: true
urxvt*scrollBar: true
! scrollbar style - rxvt (default), plain (most compact), next, or xterm
URxvt.scrollstyle: plain
urxvt*depth: 32
urxvt*internalBorder: 5
! URxvt.transparent:   true
URxvt.shading:       20
URxvt.fading:      40
!urxvt*fadeColor: #000000 ! цвет тени

!Общие настройки xft
Xft.antialias: 1
Xft.autohint: 0
Xft.dpi: 96
Xft.hinting: 1
Xft.hintstyle: hintfull
Xft.lcdfilter: lcddefault
Xft.rgba: rgb


! tabbedex is not provided by default (Debian/Ubuntu)
! put it in ~/.urxvt/ext

! used extensions
! URxvt.perl-ext-common: default,selection-to-clipboard,keyboard-select,tabbedex,font-size
URxvt.perl-ext-common: default,selection-to-clipboard,keyboard-select,tabbedex

! URxvt*font: xft:Inconsolata:style=Regular:pixelsize=32:antialias=true:hinting=true
! URxvt*boldFont: xft:Inconsolata:bold:pixelsize=30:antialias=true:hinting=true
! URxvt*font: xft:Inconsolata:style=Regular:pixelsize=15:antialias=true:hinting=true
! URxvt*boldFont: xft:Inconsolata:bold:pixelsize=14:antialias=true:hinting=true

! URxvt.keysym.C-Up:     perl:font-size:increase
! URxvt.keysym.C-Down:   perl:font-size:decrease
! URxvt.keysym.C-S-Up:   perl:font-size:incglobal
! URxvt.keysym.C-S-Down: perl:font-size:decglobal
! URxvt.keysym.C-equal:  perl:font-size:reset
! URxvt.keysym.C-slash:  perl:font-size:show

URxvt*saveLines: 12000
URxvt*color4: RoyalBlue
URxvt*color12: RoyalBlue

URxvt.keysym.M-Escape: perl:keyboard-select:activate


url-select instead of matcher
URxvt.perl-ext: default,url-select
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.launcher: /usr/bin/xdg-open
URxvt.url-select.underline: true
URxvt.colorUL: #4682B4

! https://wiki.archlinux.org/index.php/Rxvt-unicode
URxvt.tabbed.autohide: true
! Display the title of terminal next to tabs list
URxvt.tabbed.title: false
! Tabs: gray background, ~white text
! and the opposite for the currently focused tab
URxvt.tabbed.tabbar-fg: 7
URxvt.tabbed.tabbar-bg: 8
URxvt.tabbed.tab-fg: 8
URxvt.tabbed.tab-bg: 7
